<!--
Macro for entity details
 -->
<macro>
    <applysto>
        <tag name="t:field"/>
        <tag name="t:combobox"/>
        <tag name="t:button"/>
        <tag name="t:calendarfield"/>
        <tag name="t:formattedfield"/>
        <tag name="t:spinner"/>
    </applysto>
    <parameters>
        <parameter name="bean"/>
        <parameter name="property"/>
    </parameters>
    <attributes>
        <attribute name="text" value="#{d.${bean}.values.${property}}"/>
        <attribute name="value" value="#{d.${bean}.values.${property}}"/>
        <attribute name="bgpaint" value="#{d.${bean}.bgpaint.${property}}"/>
        <attribute name="enabled" value="#{d.${bean}.enabled}"/>
    </attributes>
</macro>
